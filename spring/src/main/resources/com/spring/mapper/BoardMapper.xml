<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.mapper.BoardMapper">

    <select id="getList" resultType="com.spring.domain.BoardVO">
        <![CDATA[select * from board where bno > 0]]>
    </select>

    <insert id="insert">
        insert into board(title, content, writer) values(#{title}, #{content}, #{writer})
    </insert>

    <select id="read" resultType="com.spring.domain.BoardVO">
        select * from board where bno = #{bno}
    </select>

    <delete id="delete">
        delete from board where bno = #{bno}
    </delete>

    <update id="update">
        update board
           set title = #{title},
               content = #{content},
               writer = #{writer},
               updateDate = now()
         where bno = #{bno}
    </update>

    <select id="getSeq" resultType="int">
        SELECT LAST_INSERT_ID()
    </select>

    <sql id="criteria">
        <trim prefix = "where (" suffix = ")" prefixOverrides="OR">
            <foreach item='type' collection='typeArr'>
                <trim prefix="OR">
                    <choose>
                        <when test="type == 'T'.toString()">
                            TITLE like CONCAT('%', #{keyword}, '%')
                        </when>
                        <when test="type == 'C'.toString()">
                            CONTENT like CONCAT('%', #{keyword}, '%')
                        </when>
                        <when test="type == 'W'.toString()">
                            WRITER like CONCAT('%', #{keyword}, '%')
                        </when>
                    </choose>
                </trim>
            </foreach>
        </trim>
    </sql>

    <select id="getListWithPaging" resultType="com.spring.domain.BoardVO">
        select @ROWNUM := @ROWNUM + 1 AS ROWNUM,
               board.*
        from board, (select @ROWNUM := 0) TMP
        <include refid="criteria" />
        order by bno desc
        limit ${(pageNum - 1) * 10}, #{amount}
    </select>

    <select id="getTotalCount" resultType="int">
        select count(*) from board <include refid="criteria" />
    </select>


</mapper>