<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.mapper.ReplyMapper">

    <insert id="insert">
        insert into tbl_reply (bno, reply, replyer) VALUES (#{bno}, #{reply}, #{replyer})
    </insert>

    <select id="read" resultType="com.spring.domain.ReplyVO">
        SELECT
            *
        FROM
            tbl_reply
        WHERE
            rno = #{rno}
    </select>

    <delete id="delete">
        DELETE FROM tbl_reply WHERE rno = #{rno}
    </delete>

    <update id="update">
        UPDATE
            tbl_reply
        set
            reply = #{reply}, updateDate = now()
        WHERE
            rno = #{rno}
    </update>

    <select id="getListWithPaging" resultType="com.spring.domain.ReplyVO">
        SELECT * FROM tbl_reply WHERE bno = #{bno} order by rno desc
    </select>
</mapper>