<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.trip.mapper.HotelMapper">

    <resultMap id="hotelMap" type="com.trip.domain.HotelVO">
        <id property="hno" column="HOTEL_NO"/>
        <result property="name" column="HOTEL_NAME" />
        <result property="grade" column="HOTEL_GRADE" />
        <result property="address" column="HOTEL_ADDRESS" />
        <result property="phone" column="HOTEL_PHONE" />
    </resultMap>

    <select id="getList" resultMap="hotelMap">
        select * from HOTEL
    </select>

    <select id="read" resultMap="hotelMap" resultType="com.trip.domain.HotelVO">
        select * from HOTEL where HOTEL_NO=#{hno}
    </select>

    <delete id="delete">
        delete from HOTEL where HOTEL_NO = #{hno}
    </delete>

    <update id="update">
        update HOTEL
            set HOTEL_NAME = #{name},
                HOTEL_GRADE = #{grade},
                HOTEL_ADDRESS = #{address},
                HOTEL_PHONE = #{phone}
            where HOTEL_NO = #{hno}
    </update>

    <insert id="insert">
        INSERT INTO HOTEL(HOTEL_NAME, HOTEL_GRADE, HOTEL_ADDRESS, HOTEL_PHONE) VALUES(#{name}, #{grade}, #{address}, #{phone})
    </insert>

    <select id="getListWithPaging" resultMap="hotelMap">
        select * from HOTEL
        ORDER BY HOTEL_NO DESC
        limit ${(pageNum -1) * amount}, ${amount}
    </select>

    <select id="getTotalCount" resultType="int">
        SELECT COUNT(*) FROM HOTEL
    </select>
</mapper>